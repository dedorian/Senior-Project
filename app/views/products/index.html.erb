<p id="notice"><%= notice %></p>

<% @products.each do |product| %>
<div style="width:80%; margin:auto;">
    <div class="well">
        <div class="row">
            <div class="col-md-4 col-sm-4">
                <%= image_tag "/#{product.image}.png", size: "185x225" %>
            </div>
            <div class="col-md-1 col-sm-1"></div>
            <div class="col-md-7 col-sm-7">
                <h4><%= product.name %></h4>
                <div class="row">
                    <div class="col-md-4 col-sm-4 col-xs-4">
                        <label>Price:</label><br>
                        <label>Description:</label>
                    </div>
                    <div class="col-md-8 col-sm-8 col-xs-8">
                        <span style="color: green"><%= number_to_currency product.price %></span><br>
                        <span>
                            <em><%= product.description %></em>
                        </span>
                    </div>
                </div>
                <div class="text-right align-text-bottom">
                    <br>
                    <br>
                    <br>
                    <br>
                    <%= link_to ("<button class='btn btn-info'>Customize this product!</button>").html_safe, controller: "products", action: "show", id: product.id %>
                </div>
            </div>
        </div>
    </div>
</div>
<% end %>
