<%= form_for(order) do |f| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_user.admin? %>
  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :total %><br>
    <%= f.text_field :total %>
  </div>
  <% end %>


  <div class="field">
    <%= f.label :color %><br>
    <%= f.select :color, ['Red','Orange','Yellow','Green','Blue','Purple','Brown','White','Black'] %>
  </div>

  <div class="field">
    <%= f.label :size %><br>
    <%= f.select :size, ['XS','S','M','L','XL','2X','3X','4X'] %>
  </div>

  <div class="field">
    <%= f.label :inscription %><br>
    <%= f.text_area :inscription, size: "50x5" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
